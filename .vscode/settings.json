{
  "git.ignoreLimitWarning": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "eslint.workingDirectories": ["./packages/frontend", "./packages/backend"],
  "typescript.tsdk": "./node_modules/typescript/lib",
  "git.inputValidationLength": 100,
  "git.inputValidation": "off",
  "files.autoSave": "onFocusChange",
  "cSpell.words": [
    "cuuid",
    "deepch",
    "fontawesome",
    "fortawesome",
    "godotenv",
    "keyout",
    "mpegts",
    "muxer",
    "nosniff",
    "Onvif",
    "realmonitor",
    "RSTP",
    "rtsp",
    "rtspv",
    "suuid",
    "tsavo",
    "webrtc",
    "zzxyz"
  ],
  "markdownlint.config": {
    "default": true,
    "no-inline-html": {
      "allowed_elements": ["details", "p", "br"]
    }
  },
  "psi-header.lang-config": [
    {
      "language": "javascript",
      "begin": "",
      "prefix": "// ",
      "suffix": "",
      "lineLength": 100,
      "end": "",
      "forceToTop": true,
      "blankLinesAfter": 0,
      "beforeHeader": [],
      "afterHeader": [],
      "rootDirFileName": "package.json",
      "modDateFormat": "dd/MM/yyyy hh:nn:ss",
      "replace": [],
      "ignoreLines": [""]
    },
    {
      "language": "typescript",
      "mapTo": "javascript"
    },
    {
      "language": "TypeScriptReact",
      "mapTo": "javascript"
    }
  ],
  "psi-header.templates": [
    {
      "language": "javascript",
      "template": [
        "-------------------------------------------------------------------------------------------------",
        "-------------------------------------------------------------------------------------------------"
      ]
    },
    {
      "language": "typescript",
      "mapTo": "javascript"
    },
    {
      "language": "TypeScriptReact",
      "mapTo": "javascript"
    }
  ],
  "psi-header.changes-tracking": {
    "isActive": true,
    "exclude": ["markdown", "json", "jsonc", "shellscript"],
    "includeGlob": ["**/src/**/*.{ts,tsx,js,jsx}"],
    "excludeGlob": ["./**/*/ignoreme.*", "**/settings.json"],
    "autoHeader": "autoSave",
    "enforceHeader": true,
    "replace": [],
    "updateLicenseVariables": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "peacock.color": "#f9e64f"
}
